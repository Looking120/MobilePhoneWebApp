@model MobilePhoneWebApp.BusinessLogic.Dtos.CPUDto;
@using MobilePhoneWebApp.BusinessLogic.Services.Interfaces;
@inject ICPUService cpuService;

<!DOCTYPE html>
<html>
<head>

    <title>Edit</title>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-5 mb-">
                <strong>Edit CPU</strong>
            </h1>
        </div>
    </div>

    <div class="main row justify-content-center">
        <form asp-action="Edit" method="post" class="row justify-content-center mb-4" autocomplete="off">
            <div class="col-7 mb-3">
                <label for="Edit" class="form-label mt-4">Select CPU</label>
                <select class="form-select" asp-for="Id">
                    <option value="">Select CPU</option>
                    @foreach (var cpu in await cpuService.GetAllAsync())
                    {
                        <option value="@cpu.Id">@cpu.Name</option>
                    }
                </select>
            </div>
            <div class="col-7 mb-3">
                <label for="Name">CPU</label>
                <input class="form-control" type="text" asp-for="Name" placeholder="Enter CPU" />
            </div>
            <div class="col-7 mb-3">
                <label for="description">Description</label>
                <input class="form-control" type="text" asp-for="Description" placeholder="Enter Description for CPU" />
            </div>
            <div class="col-7">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
        </form>
    </div>
</body>
</html>