@model MobilePhoneWebApp.BusinessLogic.Dtos.CityDto;
@using MobilePhoneWebApp.BusinessLogic.Services.Interfaces;
@inject ICityService cityService;

<!DOCTYPE html>
<html>
<head>

    <title>Create</title>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-5 mb-3">
                <strong>Edit Cities</strong>
            </h1>
        </div>
    </div>

    <div class="main row justify-content-center">
        <form asp-action="Edit" method="post" class="row justify-content-center mb-4" autocomplete="off">

            <div class="col-7 mb-3">
                <label for="Edit" class="form-label mt-4">Select City</label>
            <select class="form-select" asp-for="Id" asp-items="@(new SelectList(await cityService.GetAllAsync(), "Id", "Name"))">
                    <option value="">Select City</option>
                    @foreach (var cities in await cityService.GetAllAsync())
                    {
                        <option value="@cities.Id">@cities.Name</option>
                    }
                </select>
            </div>
            <div class="col-7 mb-3">
                <label for="firstName"> First Name</label>
                <input class="form-control" type="text" asp-for="Name" placeholder="Enter First Name" />
            </div>
            <div class="col-7 mb-3">
                <label for="lastName"> Last Name</label>
                <input class="form-control" type="text" asp-for="PostalCode" placeholder="Enter Last Name" />
            </div>
           
            <div class="col-7">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
        </form>
    </div>
</body>
</html>