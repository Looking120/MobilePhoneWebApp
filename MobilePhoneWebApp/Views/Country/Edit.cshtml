@model MobilePhoneWebApp.BusinessLogic.Dtos.CountryDto;
@using MobilePhoneWebApp.BusinessLogic.Services.Interfaces;
@inject ICountryService countryService;

<!DOCTYPE html>
<html>
<head>

    <title>Create</title>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-5 mb-3">
                <strong>Edit Countries</strong>
            </h1>
        </div>
    </div>

    <div class="main row justify-content-center">
        <form asp-action="Edit" method="post" class="row justify-content-center mb-4" autocomplete="off">

            <div class="col-7 mb-3">
                <label for="Edit" class="form-label mt-4">Select Country</label>
                <select class="form-select" asp-for="Id">
                    <option value="">Select City</option>
                    @foreach (var coutries in await countryService.GetAllAsync())
                    {
                        <option value="@coutries.Id">@coutries.Name</option>
                    }
                </select>
            </div>
            <div class="col-7 mb-3">
                <label for="Name">Countries</label>
                <input class="form-control" type="text" asp-for="Name" placeholder="Enter The Country" />
            </div>
         
            <div class="col-7">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
        </form>
    </div>
</body>
</html>