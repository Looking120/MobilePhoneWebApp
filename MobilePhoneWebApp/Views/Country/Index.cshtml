  @model List<MobilePhoneWebApp.BusinessLogic.Dtos.CountryDto>
@{
    ViewData["Title"] = "City";
}
<!DOCTYPE html>
<html>

<head>
    <title>Countries</title>
</head>
<body>

    <div class="container mt-5">
        <h1 class="display-5 mb-3">
            <strong>Countries List</strong>
        </h1>
    </div>

    <div class="container mt-3">
        <div class="row">
            <div class="col-7">

                <table class="table table-striped table-dark">
                    <thead>

                        <tr>
                            <th>Number </th>
                            <th> Counrty</th>
                            <th> Actions</th>
                        </tr>
                    </thead>
                    <tbody class="customer-table">
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)
                                <td>@Model[i].Name</td>
                              
                                
                                <td>
                                    <a href="@Url.Action("Edit", "Country", new { id = Model[i].Id })"
                                       class="btn btn-warning btn-sm edit">Edit</a>
                                    <a href="@Url.Action("Delete", "Country", new { id = Model[i].Id })"
                                       class="btn btn-danger btn-sm delete">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <a href="@Url.Action("Create", "Country")" class="btn btn-primary btn-lg col-1">Create</a>
    </div>
</body>
</html>