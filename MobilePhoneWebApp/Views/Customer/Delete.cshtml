@model MobilePhoneWebApp.BusinessLogic.Dtos.CustomerDto;
<!DOCTYPE html>
<html>
<head>
    <title>Delete</title>
</head>
<body>

    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-5 mb-3">
                <strong>Delete Customer</strong>
            </h1>
        </div>
    </div>

    <div class="main row justify-content-center">
        <form asp-action="Delete" method="post" class="row justify-content-center mb-4" autocomplete="off">
            <div class="col-7 mb-3">
                <label for="FirstName">Customer</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"> </span>
            </div>
            <div class="col-7">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
        </form>
    </div>
</body>
</html>
