  @model List<MobilePhoneWebApp.BusinessLogic.Dtos.CustomerDto>
@{
    ViewData["Title"] = "Customer";
}
<!DOCTYPE html>
<html>

<head>
    <title>Customer</title>
</head>
<body>

    <div class="container mt-5">
            <h1 class="display-5 mb-3">
                <strong>Customer List</strong>
            </h1>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-10">

                <table class="table table-striped table-dark">
                    <thead>

                        <tr>
                            <th>Number </th>
                            <th> Firstname</th>
                            <th> Lastname</th>
                            <th> Email</th>
                            <th> PhoneNumber</th>
                            <th> Actions</th>
                        </tr>
                    </thead>
                    <tbody class="customer-table">
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)
                                <td>@Model[i].FirstName</td>
                                <td>@Model[i].LastName</td>
                                <td>@Model[i].Email</td>
                                <td>@Model[i].PhoneNumber</td>

                                <td>
                                    <a href="@Url.Action("Edit", "Customer", new { id = Model[i].Id })"
                                       class="btn btn-warning btn-sm edit">Edit</a>
                                    <a href="@Url.Action("Delete", "Customer", new { id = Model[i].Id })"
                                       class="btn btn-danger btn-sm delete">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <a href="@Url.Action("Create", "Customer")" class="btn btn-primary btn-lg col-1">Create</a>
    </div>
   
</body>
</html>