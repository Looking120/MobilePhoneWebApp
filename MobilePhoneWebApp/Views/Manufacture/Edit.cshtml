@model MobilePhoneWebApp.BusinessLogic.Dtos.ManufactureDto;
@using MobilePhoneWebApp.BusinessLogic.Services.Interfaces;
@inject IManufactureService manufactureService;

<!DOCTYPE html>
<html>
<head>

    <title>Edit</title>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-5 mb-3">
                <strong>Edit Manufacture</strong>
            </h1>
        </div>
    </div>

    <div class="main row justify-content-center">
        <form asp-action="Edit" method="post" class="row justify-content-center mb-4" autocomplete="off">
            
            <div class="col-7 mb-3">
                <label for="Edit" class="form-label mt-4">Select Manufacture</label>
                <select class="form-select" asp-for="Id">
                    <option value="">Select Manufacture</option>
                    @foreach (var manufacture in await manufactureService.GetAllAsync())
                    {
                        <option value="@manufacture.Id">@manufacture.Name</option>
                    }
                </select>
            </div>
            <div class="col-7 mb-3">
                <label for="Name">Manufacture</label>
                <input class="form-control" type="text" asp-for="Name" placeholder="Enter Manufacture" />
            </div>
           
            <div class="col-7">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
        </form>
    </div>
</body>
</html>