  @model List<MobilePhoneWebApp.BusinessLogic.Dtos.MobilePhoneDto>
@{
    ViewData["Title"] = "MobilePhone";
}
<!DOCTYPE html>
<html>

<head>
    <title>MobilePhone</title>
</head>
<body>

    <div class="container mt-5">
        <h1 class="display-5 mb-5">
            <strong>TypeCPU List</strong>
        </h1>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-10">

                <table class="table table-striped table-dark">
                    <thead>

                        <tr>
                            <th>Number </th>
                            <th>Model</th>
                            <th>Cost</th>
                            <th>Year of Release</th>
                            <th>RAM</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="customer-table">
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)
                                <td>@Model[i].Model</td>
                                <td>@Model[i].Cost</td>
                                <td>@Model[i].YearOfRelease</td>
                                <td>@Model[i].Ram</td>


                                <td>
                                    <a href="@Url.Action("Edit", "MobilePhone", new { id = Model[i].Id })"
                                       class="btn btn-warning btn-sm edit">Edit</a>
                                    <a href="@Url.Action("Delete", "MobilePhone", new { id = Model[i].Id })"
                                       class="btn btn-danger btn-sm delete">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <a href="@Url.Action("Create", "MobilePhone")" class="btn btn-primary btn-lg col-1">Create</a>
    </div>

</body>
</html>

