  @model List<MobilePhoneWebApp.BusinessLogic.Dtos.SaleDto>
@{
    ViewData["Title"] = "Sale";
}
<!DOCTYPE html>
<html>

<head>
    <title>Sale</title>
</head>
<body>

    <div class="container mt-5">
        <h1 class="display-5 mb-5">
            <strong>Sale List</strong>
        </h1>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-10">

                <table class="table table-striped table-dark">
                    <thead>

                        <tr>
                            <th>Number </th>
                            <th>Name</th>
                            <th>OnlineStore</th>
                            <th>Quantity </th>
                            <th>Date Sale</th>
                            <th> Actions</th>
                        </tr>
                    </thead>
                    <tbody class="customer-table">
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)
                                <td>@Model[i].Customer.LastName</td>
                                <td>@Model[i].OnlineStores.WebSite</td>
                                <td>@Model[i].Quantity</td>
                                <td>@Model[i].DateSale</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Sale", new { id = Model[i].Id })"
                                       class="btn btn-warning btn-sm edit">Edit</a>
                                    <a href="@Url.Action("Delete", "Sale", new { id = Model[i].Id })"
                                       class="btn btn-danger btn-sm delete">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <a href="@Url.Action("Create", "Sale")" class="btn btn-primary btn-lg col-1"> Create</a>
    </div>

</body>
</html>

