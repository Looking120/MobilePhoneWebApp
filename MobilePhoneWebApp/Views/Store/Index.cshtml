  @model List<MobilePhoneWebApp.BusinessLogic.Dtos.StoreDto>
@{
    ViewData["Title"] = "Store";
}
<!DOCTYPE html>
<html>

<head>
    <title>Store</title>
</head>
<body>

    <div class="container mt-5">
        <h1 class="display-5 mb-3">
            <strong>Store List</strong>
        </h1>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-10">

                <table class="table table-striped table-dark">
                    <thead>

                        <tr>
                            <th>Number</th>
                            <th>Name </th>
                            <th>Address </th>
                            <th>Postal Code</th>
                            <th>Phone Number</th>
                            <th>City</th>
                            <th> Actions</th>
                        </tr>
                    </thead>
                    <tbody class="customer-table">
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)
                                <td>@Model[i].Name</td>
                                <td>@Model[i].Address</td>
                                <td>@Model[i].PostalCode</td>
                                <td>@Model[i].PhoneNumber</td>
                                <td>@Model[i].City.Name</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Store", new { id = Model[i].Id })"
                                       class="btn btn-warning btn-sm edit">Edit</a>
                                    <a href="@Url.Action("Delete", "Store", new { id = Model[i].Id })"
                                       class="btn btn-danger btn-sm delete">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <a href="@Url.Action("Create", "Store")" class="btn btn-primary btn-lg col-1"> Create</a>
    </div>

</body>
</html>

