@model MobilePhoneWebApp.BusinessLogic.Dtos.TypeCPUDto;
@using MobilePhoneWebApp.BusinessLogic.Services.Interfaces;
@inject ITypeCPUService typeCPUService;

<!DOCTYPE html>
<html>
<head>

    <title>Edit</title>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-5 mb-3">
                <strong>Edit TypeCPU</strong>
            </h1>
        </div>
    </div>

    <div class="main row justify-content-center">
        <form asp-action="Edit" method="post" class="row justify-content-center mb-4" autocomplete="off">

            <div class="col-7 mb-3">
                <label for="TypeCpu" class="form-label mt-4">Select Type CPU</label>
                <select class="form-select" asp-for="Id">
                    <option value="">Select TypeCPU</option>
                    @foreach (var typeCPU in await typeCPUService.GetAllAsync())
                    {
                        <option value="@typeCPU.Id">@typeCPU.Name</option>
                    }
                </select>
            </div>
            <div class="col-7 mb-3">
                <label for="Name">TypeCPU</label>
                <input class="form-control" type="text" asp-for="Name" placeholder="Enter TypeCPU" />
            </div>
            <div class="col-7">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
        </form>
    </div>
</body>
</html>